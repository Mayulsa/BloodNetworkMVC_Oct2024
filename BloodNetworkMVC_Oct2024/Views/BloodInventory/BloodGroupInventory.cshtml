@model IEnumerable<BloodUnit>

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-6">Blood Group Inventory</h1>

    <div class="mb-4">
        <label>Filter by Blood Group:</label>
        <select id="bloodGroupFilter" class="border rounded p-2"
                onchange="window.location.href = '/BloodInventory/BloodGroupInventory?bloodGroup=' + this.value">
            <option value="">All Groups</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
        </select>
    </div>

    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full">
            <thead>
                <tr>
                    <th class="p-3">Blood Group</th>
                    <th class="p-3">Collection Date</th>
                    <th class="p-3">Expiration Date</th>
                    <th class="p-3">Location</th>
                    <th class="p-3">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model)
                {
                    <tr>
                        <td class="p-3">@unit.BloodGroup</td>
                        <td class="p-3">@unit.CollectionDate.ToShortDateString()</td>
                        <td class="p-3">@unit.ExpirationDate.ToShortDateString()</td>
                        <td class="p-3">@unit.Freezer.Name - @unit.Drawer.Name</td>
                        <td class="p-3">@unit.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
