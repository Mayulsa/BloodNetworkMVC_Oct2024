@model Drawer

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Add New Drawer</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name">Drawer Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Capacity">Capacity</label>
                            <input asp-for="Capacity" type="number" class="form-control" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FreezerId">Freezer</label>
                            <select asp-for="FreezerId" asp-items="ViewBag.Freezers" class="form-control">
                                <option value="">Select Freezer</option>
                            </select>
                            <span asp-validation-for="FreezerId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
